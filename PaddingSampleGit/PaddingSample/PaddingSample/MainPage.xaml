<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PaddingSample"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             x:Class="PaddingSample.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Button Text="Click apply padding" Clicked="Button_Clicked"/>
            <AbsoluteLayout  HeightRequest="200" BackgroundColor="LightGray">

                <AbsoluteLayout x:Name="childLayout" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All"
                    BackgroundColor="Red">
                    <BoxView AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" BackgroundColor="Green" />
                </AbsoluteLayout>

            </AbsoluteLayout>
        </VerticalStackLayout>
    </ScrollView>
        
</ContentPage>
